{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Func",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#chars"
		},
		{
			"include": "#functional"
		},
		{
			"include": "#comment"
		},
		{
			"include": "#variable"
		},
		{
			"include": "#constant"
		}
	],
	"repository": {
		"comment": {
			"name": "comment",
			"begin": "#",
			"end": "$"
		},
		"constant": {
			"patterns": [
				{
					"name": "constant.numeric",
					"match": "\\b([0-9]*.[0-9]+([eE][-+]?[0-9]+)?)|([0-9]+[eE][-+]?[0-9]+)|([0-9]+)\\b"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.func",
					"match": "\\b(defn|data|case|of|do|return|True|False|Int|Float|Char|Bool|List|print|read|charToNum|numToChar|floatToNum)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.func",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.func",
					"match": "\\\\."
				}
			]
		},
		"chars": {
			"patterns": [
				{
					"name": "constant.character",
					"match": "'([^'\\\\])'"
				},
				{
					"name": "constant.character.escape",
					"match": "'\\\\([btnfr\"'\\\\]|[0-9a-fA-F]{1,3}|.)'"
				}
			]
		},
		"functional": {
			"name": "entity.name.function",
			"patterns": [
				{
					"name": "entity.name.function.functional",
					"match": "(?<=\\b(defn))\\s*\\b([a-z][a-zA-Z]*)\\b"
				},
				{
					"name": "entity.name.function.functional",
					"match": "(?<=\\b(data))\\s*\\b([A-Z][a-zA-Z]*)\\b"
				}
			]
		},
		"variable": {
			"patterns": [
				{
					"name": "variable.name",
					"match": "\\b[A-Z][a-zA-Z]*\\b"
				}
			]
		}
	},
	"scopeName": "source.func"
}